@model BeautyBooking.Web.ViewModels.Salons.SalonWithAppointmentsViewModel
@{
    this.ViewData["Title"] = "Salon Manager: " + Model.Name;
}

<div class="row row-eq-height">
    <!-- Info Box -->
    <div class="col-lg-4 info_box_col">
        <div class="info_box">
            <div class="info_image"><img src="@Model.ImageUrl" alt=""></div>
            <div class="info_content">
                <div class="info_title">@Model.Name</div>
                <div class="info_text">Category: <strong>@Model.CategoryName</strong></div>
                <div class="info_text">City: <strong>@Model.CityName</strong></div>
                <div class="info_text">Address: <strong>@Model.Address</strong></div>
                <div class="info_text">
                    Rating:
                    <span class="star-rating">
                        <span class="fa fa-star-o" data-rating="1"></span>
                        <span class="fa fa-star-o" data-rating="2"></span>
                        <span class="fa fa-star-o" data-rating="3"></span>
                        <span class="fa fa-star-o" data-rating="4"></span>
                        <span class="fa fa-star-o" data-rating="5"></span>
                        <input type="hidden" name="whatever1" class="rating-value" value="@Model.Rating">
                    </span>
                    <span> @Model.Rating / 5</span>
                </div>
            </div>
        </div>
    </div>
    <!-- Panel -->
    <div class="col-lg-8">
        <h1>Services:</h1>
        <table class="table table-bordered">
            <thead class="thead-light">
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Available</th>
                    <th scope="col">Edit</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var service in Model.Services)
                {
                    <tr>
                        <th scope="row">@service.ServiceName</th>
                        <td>
                            @if (service.Available == true)
                            {
                                <span style="font-family:Arial, FontAwesome" class="text-success">&#xf00c;</span>
                            }
                            else
                            {
                        <span style="font-family:Arial, FontAwesome" class="text-danger">&#xf00d;</span>
                            }
                        </td>
                        <td>Edit</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<hr class="bg-dark mx-4" style="height: 6px;" />
<div class="row row-eq-height">
    <div class="col-lg-12">
        <h1 class="my-3">Appointments (@Model.Appointments.Count)</h1>
        @if (@Model.Appointments.Count > 0)
        {
            <table class="table table-striped">
                <thead class="thead-light">
                    <tr>
                        <th scope="col">DateTime</th>
                        <th scope="col">Client</th>
                        <th scope="col">Service</th>
                        <th scope="col">Status</th>
                        <th scope="col">Confirm</th>
                        <th scope="col">Decline</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var appointment in this.Model.Appointments)
                    {
                        <tr>
                            <th scope="row">@appointment.DateTime</th>
                            <td>@appointment.UserEmail</td>
                            <td>@appointment.ServiceName</td>
                            <td>
                                @if (appointment.Confirmed == true)
                                {
                                    <span class="badge badge-success">Confirmed</span>
                                }
                                else if (appointment.Confirmed == false)
                                {
                                    <span class="badge badge-danger">Declined</span>
                                }
                                else
                                {
                                    <span class="badge badge-secondary">Pending</span>
                                }
                            </td>
                            <td>
                                <form method="post">
                                    <button type="submit" class="btn btn-success btn-sm"
                                            asp-area="Manager" asp-controller="Salons" asp-action="ConfirmAppointment" asp-route-id="@appointment.Id" asp-route-salon="@Model.Id">
                                        Confirm
                                    </button>
                                </form>
                            </td>
                            <td>
                                <form method="post">
                                    <button type="submit" class="btn btn-danger btn-sm"
                                            asp-area="Manager" asp-controller="Salons" asp-action="DeclineAppointment" asp-route-id="@appointment.Id" asp-route-salon="@Model.Id">
                                        Decline
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>

@section Scripts {
    <script src="~/js/rating-static.js" asp-append-version="true"></script>
}
