@model BeautyBooking.Web.ViewModels.SalonManager.Salons.SalonsListViewModel
<!-- Sidebar -->
<div class="bg-light border border-secondary" id="sidebar-wrapper">
    <div class="sidebar-heading"><strong>Salon Manager</strong></div>
    <div class="list-group list-group-flush">

        @foreach (var salon in Model.Salons)
        {
            <a asp-area="" asp-controller="Salons" asp-action="Details" asp-route-id="@salon.Id"
               class="list-group-item list-group-item-action bg-light">@salon.Name</a>
        }

    </div>
</div>
<!-- /#sidebar-wrapper -->