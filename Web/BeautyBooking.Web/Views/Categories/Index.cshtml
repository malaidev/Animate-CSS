@model BeautyBooking.Web.ViewModels.Categories.CategoriesListViewModel

@{
    this.ViewData["Title"] = "Categories of Beauty Services";
}

<div class="row">

    <!-- News Posts -->

    @foreach (var category in Model.Categories)
    {
        <div class="col-lg-4">

            <hr class="bg-dark mx-4" style="height: 6px;" id="@category.Id" />

            <!-- News Post -->
            <div class="news_post">
                <div class="news_post_image"><img src="@category.ImageUrl" alt=""></div>
                <div class="news_post_content">
                    <div class="news_post_title text-center"><a>@category.Name</a></div>
                    <div class="news_post_text">
                        <p>@category.Description</p>
                    </div>
                </div>                
                <div class="text-center">
                    <div class="button button-large button_1 elements_button mt-4">
                        <a asp-area="" asp-controller="Salons" asp-action="Index">
                            <span>Find Salons (@category.SalonsCount)</span>
                            <span>Find Salons (@category.SalonsCount)</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>

    }

</div>
