@model BeautyBooking.Web.ViewModels.Categories.CategoryViewModel

@{
    this.ViewData["Title"] = Model.Name;
}

<div class="row">

    <!-- News Posts -->
    <div class="col-lg-10">
        <div class="news_posts">

             

                <!-- News Post -->
                <div class="news_post">
                    <div class="news_post_image"><img src="@Model.ImageUrl" alt=""></div>
                    <div class="news_post_content">
                        <div class="news_post_title"><a>@Model.Name</a></div>
                        <div class="news_post_text mb-4">
                            <p>@Model.Description</p>
                        </div>
                        
                        @foreach (var service in Model.Services)
                        {
                            <div class="accordion_container">
                                <div class="accordion d-flex flex-row align-items-center active"><div>@service.Name</div></div>
                                <div class="accordion_panel">
                                    <div>
                                        <p>@service.Description</p>
                                    </div>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            

        </div>
    </div>    
</div>